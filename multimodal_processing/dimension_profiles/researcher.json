{
  "name": "researcher",
  "description": "Innovation and research-focused reasoning for academic and R&D work",
  "version": "2.0",
  "target_users": ["researchers", "academics", "scientists", "r_and_d_teams"],
  "dimensions": {
    "novelty": {
      "weight": 1.5,
      "description": "Innovation, originality, and breakthrough potential",
      "patterns": [
        "novel",
        "innovative",
        "breakthrough",
        "cutting-edge",
        "state-of-the-art",
        "pioneering",
        "first-of-its-kind"
      ],
      "boost_keywords": ["novel", "innovative", "breakthrough", "new", "original"]
    },
    "technical_depth": {
      "weight": 1.3,
      "description": "Technical sophistication and methodological rigor",
      "patterns": [
        "methodology",
        "algorithm",
        "mathematical",
        "statistical",
        "experimental",
        "theoretical"
      ],
      "boost_keywords": ["technical", "methodological", "rigorous", "systematic", "detailed"]
    },
    "methodology": {
      "weight": 1.2,
      "description": "Research methodology quality and experimental design",
      "patterns": [
        "experimental design",
        "control group",
        "statistical analysis",
        "peer-reviewed",
        "reproducible",
        "validated"
      ],
      "boost_keywords": ["methodology", "experimental", "systematic", "controlled", "validated"]
    },
    "impact": {
      "weight": 1.4,
      "description": "Potential research impact and scientific contribution",
      "patterns": [
        "significant impact",
        "breakthrough",
        "paradigm shift",
        "field-changing",
        "influential",
        "transformative"
      ],
      "boost_keywords": ["impact", "significant", "important", "influential", "transformative"]
    },
    "reproducibility": {
      "weight": 1.1,
      "description": "Experimental reproducibility and methodological transparency",
      "patterns": [
        "reproducible",
        "replicable",
        "open data",
        "transparent",
        "documented",
        "standardized"
      ],
      "boost_keywords": ["reproducible", "replicable", "transparent", "documented", "open"]
    }
  },
  "retrieval_weights": {
    "semantic_similarity": 0.5,
    "dimension_alignment": 0.5
  },
  "priority_boosts": {
    "high_novelty_high_impact": 1.5,
    "high_technical_depth": 1.3,
    "high_methodology_high_reproducibility": 1.25
  },
  "explanation_templates": {
    "novelty": "High novelty ({score:.2f}) indicating innovative and original research",
    "technical_depth": "Technical depth ({score:.2f}) reflects methodological sophistication",
    "methodology": "Methodology score ({score:.2f}) shows experimental rigor",
    "impact": "Impact score ({score:.2f}) suggests significant research contribution",
    "reproducibility": "Reproducibility ({score:.2f}) indicates methodological transparency"
  }
}
